{
    "manifest_version": 2,
    "name": "Odoo Buddy",
    "version": "0.1",
    "description": "A nice buddy to assist you in using Odoo",
    "permissions": ["contextMenus", "storage"],
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Dank Share",
        "default_popup": "index.html"
    },
    "icons": {
        "16": "images/perro16.png",
        "32": "images/perro32.png",
        "64": "images/perro64.png",
        "128": "images/perro128.png"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "css": ["scripts/main.css"],
            "js": ["scripts/main.js"]
        }
    ],
    "web_accessible_resources": ["images/*.png"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
